<Window x:Class="Sambaza.Ui_Start_Hotspot_Required_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sambaza"
        mc:Ignorable="d"
        Title="HotSPot and Server not started" Height="450" Width="500">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Please start the hotspot and server to send files">
        </Label>
        <StackPanel HorizontalAlignment="Center" >
            <Button Content="Okay" Name="Start_Hotspot" Click="Start_Hotspot_Click" ></Button>
        </StackPanel>
    </StackPanel>
</Window>
