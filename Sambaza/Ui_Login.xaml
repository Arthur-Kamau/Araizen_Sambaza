<Window x:Class="Sambaza.Ui_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sambaza"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="450" Width="400">
    <Grid Margin="0,0,2,1" >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="170" Margin="65,100,78,149" Width="249" >
            <Label Name="Status"></Label>
            <Label Content="Enter your PassKey"  Margin="51,20,0,0"></Label>
            <StackPanel Orientation="Horizontal">
                <PasswordBox Name="passkey" Width="215" Margin="10,20,0,0"></PasswordBox>
            </StackPanel>
            <Button Name="Submit" Click="Submit_Click" Content="Submit" Width="100" Margin="10,20,0,0"></Button>

        </StackPanel>
        <Button Height="21" Width="21" x:Name="ForgotPassword"  Click="ForgotPassword_Click"   Margin="8,380,355,10"  Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" >
            <Image Height="15" Width="15" Source="./resources/images/baseline_record_voice_over_black_18dp.png"/>
        </Button>
    </Grid>
</Window>

