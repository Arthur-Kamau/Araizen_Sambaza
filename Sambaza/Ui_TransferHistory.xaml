<Page x:Class="Sambaza.Ui_TransferHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sambaza"
        mc:Ignorable="d"
        Title="Ui_TransferHistory" 
      
      d:DesignHeight="720" d:DesignWidth="785">
    <StackPanel Background="White">
        <Label Content=" Transfer History" FontSize="19" x:Name="header"></Label>
        <StackPanel Orientation="Horizontal">
            <Label Content=" empty" HorizontalAlignment="Center" Opacity="0" x:Name="content_infomation" Margin="141,0,227,0" Width="360"></Label>
            <Button HorizontalAlignment="Right" Content="Clear" Background="Transparent" BorderBrush="Transparent" Name="clear" Click="clear_Click"></Button>
        </StackPanel>
        <ScrollViewer HorizontalContentAlignment="Center" CanContentScroll="True" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden" Margin="0,10,0,0">

            <StackPanel x:Name="HistoryContents"  Height="581" Margin="0,0,0,0" VerticalAlignment="Top" Width="796">

            </StackPanel>

        </ScrollViewer>
    </StackPanel>
</Page>
